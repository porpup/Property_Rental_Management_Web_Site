@model Property_Rental_Management_Web_Site.Models.Appointment

@{
	ViewBag.Title = "MakeAppointment";
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
		<div class="container">
			<div class="navbar-brand">Property Rental</div>
			<button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					<li>@Html.ActionLink("Apartments", "Index", "Tenant", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Messages", "MyMessages", "Messages", new { area = "" }, new { @class = "nav-link" })</li>
					<li>@Html.ActionLink("Appointments", "MyAppointments", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>
				</ul>
				<ul class="nav nav-pills nav-fill">
					<li>@Html.ActionLink("Logout", "Login", "Login", new { area = "" }, new { @class = "nav-link active" })</li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="container body-content">
		<main>
			<h3>Welcome - @ViewBag.Username</h3>
			<h5>New Appointment:</h5>

			@using (Html.BeginForm("MakeAppointment", "Tenant", new { id = Model.ApartmentID }, FormMethod.Post)) {
				@Html.HiddenFor(model => model.ApartmentID)

				<div class="form-group">
					@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.TextBoxFor(model => model.Date, new { @class = "form-control", @type = "datetime-local", name = "appointmentDate", @value = Model.Date.ToString("yyyy-MM-ddTHH:mm") })

						@Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
					</div>
				</div>

				<br />

				<p>
					<input type="submit" value="Schedule Appointment" class="btn btn-primary btn-md" />
				</p>
			}


		</main>
		<div class="container body-content">
			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - Property Rental Website</p>
			</footer>
		</div>
	</div>
</body>
</html>
